<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" >
  <class name="LotterySystem.Po.User,LotterySystem" table="t_user" lazy="true" >


    <id name="userID" column ="USER_ID">
      <generator class ="native"/>
    </id>

    <property name="userName" type="string">
      <column name="USER_NAME" length="50"/>
    </property>

    <property name="password" type="string">
      <column name="PASSWORD" length="50"/>
    </property>

    <property name="payPassword" type="string">
      <column name="PAY_PASSWORD" length="50"/>
    </property>

    <property name="permission" type="string">
      <column name="PERMISSION" length="50"/>
    </property>


    <property name="status" type="string">
      <column name="STATUS" length="50"/>
    </property>

    <property name="recommendUserName" type="string">
      <column name="RCD_USER_NAME" length="50"/>
    </property>



  </class>
</hibernate-mapping>