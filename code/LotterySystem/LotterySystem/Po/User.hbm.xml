<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" >
  <class name="LotterySystem.Po.User,LotterySystem" table="t_user"  >

    
 
    <id name="UserID" column ="USER_ID" >
      <generator class ="increment"/>
    </id>

    <property name="UserName" type="string">
      <column name="USER_NAME" length="50" unique="true"/>
    </property>

    <property name="Password" type="string">
      <column name="PASSWORD" length="50"/>
    </property>

    <property name="PayPassword" type="string">
      <column name="PAY_PASSWORD" length="50"/>
    </property>

    <property name="Permission" type="string">
      <column name="PERMISSION" length="50"/>
    </property>


    <property name="Status" type="string">
      <column name="STATUS" length="50"/>
    </property>
              
    <property name="RecommendUserName" type="string">
      <column name="RECOMMEND_USER_NAME" length="50"/>
    </property>
    
    <property name="Account" type="int">
      <column name="ACCOUNT" length="50"/>
    </property>


  </class>
</hibernate-mapping>