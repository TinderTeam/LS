@{
    ViewBag.Title = "用户注册";
    
}

<!--字体样式-->
<style type="text/css">
    .form-group lable
    {
        font-family: "微软雅黑";
        font-size: 5px;
    }
</style>
<hr />
@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    <!-- 新增用户-->
    <div class="row-fluid">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6">
                <div class="form-horizontal" role="form">
                    <div style="text-align: center">
                        <label>用户注册</label>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label class="col-sm-4 control-label font1">用户名</label>
                        <div class="col-sm-8">
                            <input type="text" name="userName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4  control-label font1">请输入登录密码</label>
                        <div class="col-sm-8">
                            <input type="password" name="password" class="form-control" placeholder="请输入6~12位英文或数字" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4  control-label font1">再次确认登录密码</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" placeholder="检验两者是否一致" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label font1">请输入支付密码</label>
                        <div class="col-sm-8">
                            <input type="password" name="payPassword" class="form-control" placeholder="请输入6~12位英文或数字" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4  control-label font1">再次确认支付密码</label>
                        <div class="col-sm-8">
                            <input type="password"  class="form-control" placeholder="检验两者是否一致" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label font1">推荐人</label>
                        <div class="col-sm-8">
                            <input type="text" name="recommendUserName" class="form-control" />
                        </div>
                    </div>
                    <hr />
                    <!-- Button -->
                    <div class="control-group " style="text-align: center">
                        <label class="control-label"></label>
                        <div class="controls">
                            <input name="submit" class="btn btn-success" type="submit" value="确认">
                            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                        <input type="button" onclick="javascript: history.back(-1);" value="取消" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 新增用户 -->

}