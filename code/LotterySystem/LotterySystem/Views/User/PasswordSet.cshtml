@{
    ViewBag.Title = "修改密码";
    string msg = ViewBag.Msg;
    if(ViewBag.Msg==null){
        msg = "";
    }
   
}

<!--字体样式-->
<style type="text/css">
    .font1
    {
        font-size: 16px;
        font-family: 'Microsoft YaHei UI';
    }

    .div1
    {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<!--字体样式-->
<div id="head">
    @RenderPage("../Home/Nav.cshtml")
</div>
<!-- operation menu-->


<hr />

    <!-- 新增用户-->
    <div class="row-fluid">
        <div class="col-lg-6 col-lg-offset-3">

            @using (Html.BeginForm("ModifyLoginPassword", "User", FormMethod.Post,new{id="myform1"}))
            {
         <div class="panel panel-primary">
                <div class="panel-heading">修改登录密码</div>
                <div class="panel-body">
                    <div class="form-horizontal" role="form" >
                        <div class="form-group">
                            <label>@msg</label>                          
                        </div>
              


                        <div class="form-group">
                            <label class="col-sm-4 control-label"  >原登录密码</label>
                            <div class="col-sm-7">
                                <input name="password" type="password"   placeholder="请输入原登录密码" id="logpassword" class="{required:true} form-control" >
                            </div>
                        </div>
                        <div class="form-group" >
                            <label  class="col-sm-4 control-label" >新登录密码</label>
                            <div class="col-sm-7">
                                <input  name="newPassword" type="password"  id="newLogPassword" class="form-control {required:true,minlength:6,maxlength:12}"  placeholder="请输入6~12英文或数字" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label" >确认新登录密码</label>
                            <div class="col-sm-7">
                                <input name="confirm_password" type="password" class="{required:true,minlength:6,maxlength:12,equalTo:'#newLogPassword'} form-control"  placeholder="请再次输入新密码"  >
                            </div>
                        </div>
           
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-3">
                                <input type="submit" name="submit" class="btn btn-danger" value="修改" /> 
                            </div>
                            <div class=" col-sm-offset-1 col-sm-4">
                               @Html.ActionLink("取消", "Hall", "Game",null, new { @class = "btn btn-default" })
                               
                            </div>
                            
                        </div>

    

                    </div>
                </div>
         </div>
           }
    <!--修改登录密码-->

   

<!--修改支付密码-->

@using (Html.BeginForm("ModifyPayPassword", "User", FormMethod.Post,new{id="myform2"}))
            {
                <div class="panel panel-primary">
                <div class="panel-heading">修改支付密码</div>
                 <div class="panel-body">
                    <div class="form-horizontal" role="form"  >
                        <div class="form-group">
                            <label class="col-sm-4 control-label"  >原支付密码</label>
                            <div class="col-sm-7">
                                <input name="password" type="password"   placeholder="请输入原支付密码" id="payPassword" class="{required:true} form-control" >
                            </div>
                        </div>
                        <div class="form-group" >
                            <label  class="col-sm-4 control-label" >新支付密码</label>
                            <div class="col-sm-7">
                                <input  name="newPassword" type="password"  id="newPayPassword" class="form-control {required:true,minlength:6,maxlength:12}"  placeholder="请输入6~12英文或数字" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-4 control-label" >确认新支付密码</label>
                            <div class="col-sm-7">
                                <input name="confirm_password" type="password" class="{required:true,minlength:6,maxlength:12,equalTo:'#newPayPassword'} form-control"  placeholder="请再次输入新密码"  >
                            </div>
                        </div>
           
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-3">
                                <input type="submit" name="submit" class="btn btn-danger" value="修改" /> 
                            </div>
                            <div class=" col-sm-offset-1 col-sm-4">
                               @Html.ActionLink("取消", "Hall", "Game",null, new { @class = "btn btn-default" })
                               
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        
            }<!--修改支付密码-->




