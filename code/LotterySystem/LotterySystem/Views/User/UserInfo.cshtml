@{
    ViewBag.Title = "修改用户";

}

<!--字体样式-->
    <style type="text/css">

    .font1
    {
        font-size: 16px;
        font-family:'Microsoft YaHei UI';
    }
        .div1
        {
            margin-top:10px;
            margin-bottom:10px;  
        }
        
    </style>

@using (Html.BeginForm("ModifyUser", "User", FormMethod.Post, new { id = "myform1" }))
{
<!--字体样式-->
<div id="head" >
    @RenderPage("../Home/Nav.cshtml")
</div>
<!-- operation menu-->


<hr />
<!-- 新增用户-->
      <div class="row-fluid">
          <div class="row">
              <div class="col-lg-3">

              </div>
              <div class="col-lg-6">



           <div class="form-horizontal" role="form">
               <div style="text-align:center">
                     
                        @if ("modify".Equals(@ViewBag.Operate)){
                             <label class="font1" style="color:blue">修改用户信息</label>
                        }
                        else
                        {
                             <label class="font1" style="color:blue">新增用户信息</label>
                        }
                     
               </div>
               <hr />
               <div class="form-group">
                   <label   class="col-sm-4 control-label font1">用户名</label>
                   <div class="col-sm-8">
                     @if ("modify".Equals(@ViewBag.Operate))
                     {
                          <input type="text" name="userName" class="form-control"  value="@ViewBag.User.UserName" readonly="true">
                     }
                     else
                     {
                          <input type="text" name="userName" class="{required:true} form-control"  value="@ViewBag.User.UserName">
                
                     }
                   </div>
               </div>

               <div class="form-group">
                   <label class="col-sm-4  control-label font1">请输入登录密码</label>
                   <div class="col-sm-8">
                   <input name="password" type="password" id="newLogPassword" class="form-control {required:true,minlength:6,maxlength:12}"  placeholder="请输入6~12位英文或数字">
                    </div>
               </div>
               <div class="form-group">
                  <label  class="col-sm-4  control-label font1">再次确认登录密码</label>
                   <div class="col-sm-8">
                  <input type="password" class="{required:true,minlength:6,maxlength:12,equalTo:'#newLogPassword'} form-control"  placeholder="请再次输入登录密码" >
                    </div>
              </div>
                        <div class="form-group" >
                            <label  class="col-sm-4 control-label" >支付密码</label>
                            <div class="col-sm-8">
                                <input  name="payPassword" type="password"  id="newPayPassword" class="form-control {required:true,minlength:6,maxlength:12}"  placeholder="请输入6~12英文或数字" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-4 control-label" >确认支付密码</label>
                            <div class="col-sm-8">
                                <input  type="password" class="{required:true,minlength:6,maxlength:12,equalTo:'#newPayPassword'} form-control"  placeholder="请再次输入新密码"  >
                            </div>
                        </div>
               <div class="form-group">
                  <label class="col-sm-4  control-label font1">状态</label>
                   <div class="col-sm-8">
                            <select class="btn btn-default dropdown-toggle" name="status">
                                @if ("激活".Equals(@ViewBag.User.Status))
                                {
                                   <option value="激活" selected >激活</option>
                                }
                                else
                                {
                                   <option value="激活">激活</option>
                                } 
                                @if ("待审".Equals(@ViewBag.User.Status))
                                {
                                   <option value="待审" selected >待审</option>
                                }
                                else
                                {
                                   <option value="待审">待审</option>
                                }
                                @if ("冻结".Equals(@ViewBag.User.Status))
                                {
                                   <option value="冻结" selected >冻结</option>
                                }
                                else
                                {
                                   <option value="冻结">冻结</option>
                                }
                            </select>
                    </div>
              </div>
               <div class="form-group">
                   <label   class="col-sm-4 control-label font1">推荐人</label>
                   <div class="col-sm-8">
                   <input type="text" name="recommendUserName" class="form-control"  value="@ViewBag.User.RecommendUserName">
                   </div>
               </div>
               <hr />

  
               <hr />
            <!-- Button -->
                <div class="control-group " style="text-align:center">
                    <label class="control-label" ></label>
                    <div class="controls">
                        @if ("modify".Equals(@ViewBag.Operate)){
                             <input  class="btn btn-success" type="submit" name="submit" value="修改" />
                        }
                        else
                        {
                             <input  class="btn btn-success" type="submit" name="submit" value="创建" />
                        }
                       
						&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                         <input type="button"  onclick="javascript: history.back(-1);" value="取消" class="btn btn-default">
                    </div>
                </div>
                                   
           </div>
		   </div>
              <div class="col-lg-3">

              </div>
          </div>				
					
	</div>
<!-- 新增用户 -->

}