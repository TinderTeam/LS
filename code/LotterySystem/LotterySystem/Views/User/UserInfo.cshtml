@{
    ViewBag.Title = "修改用户";
    
}

<!--字体样式-->
    <style type="text/css">

    .font1
    {
        font-size: 16px;
        font-family:'Microsoft YaHei UI';
    }
        .div1
        {
            margin-top:10px;
            margin-bottom:10px;  
        }
        
    </style>

<!--字体样式-->
<div id="head" >
    @RenderPage("../Home/Nav.cshtml")
</div>
<!-- operation menu-->


<hr />
<!-- 新增用户-->
      <div class="row-fluid">
          <div class="row">
              <div class="col-lg-3">

              </div>
              <div class="col-lg-6">



           <form class="form-horizontal" role="form">
               <div style="text-align:center">
                     <font face="微软雅黑" color="blue" size="5px">修改用户信息</font>
               </div>
               <hr />
               <div class="form-group">
                   <label   class="col-sm-4 control-label font1">用户名</label>
                   <div class="col-sm-8">
                     @if("modify".Equals(@ViewBag.Operate))
                     {
                          <input type="text" name="userName" class="form-control"  value="@ViewBag.User.UserName" readonly="true">
                     }
                     else
                     {
                          <input type="text" name="userName" class="form-control"  value="@ViewBag.User.UserName">
                
                     }
                   </div>
               </div>

               <div class="form-group">
                   <label class="col-sm-4  control-label font1">请输入登录密码</label>
                   <div class="col-sm-8">
                   <input type="password" class="form-control"  placeholder="请输入6~12位英文或数字">
                    </div>
               </div>
               <div class="form-group">
                  <label  class="col-sm-4  control-label font1">再次确认登录密码</label>
                   <div class="col-sm-8">
                  <input type="password" class="form-control"  placeholder="检验两者是否一致">
                    </div>
              </div>
              <div class="form-group">
                   <label class="col-sm-4 control-label font1">请输入支付密码</label>
                   <div class="col-sm-8">
                   <input type="password" class="form-control"  placeholder="请输入6~12位英文或数字">
                    </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-4  control-label font1">再次确认支付密码</label>
                   <div class="col-sm-8">
                  <input type="password" class="form-control" placeholder="检验两者是否一致">
                    </div>
              </div>
               <div class="form-group">
                  <label class="col-sm-4  control-label font1">状态</label>
                   <div class="col-sm-8">
                            <select class="btn btn-default dropdown-toggle" name="status">
                                @if ("开放".Equals(@ViewBag.User.Status)) {
                                   <option value="开放" selected >开放</option>
                                }else{
                                   <option value="开放">开放</option>
                                } 
                                @if ("关闭".Equals(@ViewBag.User.Status))
                                {
                                   <option value="关闭" selected >关闭</option>
                                }else{
                                   <option value="关闭">关闭</option>
                                }
                                @if ("关闭".Equals(@ViewBag.User  .Status))
                                {
                                   <option value="冻结" selected >冻结</option>
                                }else{
                                   <option value="冻结">冻结</option>
                                }
                            </select>
                    </div>
              </div>
               <div class="form-group">
                   <label   class="col-sm-4 control-label font1">推荐人</label>
                   <div class="col-sm-8">
                   <input type="text" name="recommendUserName" class="form-control"  value="@ViewBag.User.RecommendUserName">
                   </div>
               </div>
               <hr />

  
               <hr />
            <!-- Button -->
                <div class="control-group " style="text-align:center">
                    <label class="control-label" ></label>
                    <div class="controls">
                        <button  class="btn btn-success" type="submit">确认</button>
						&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                         <input type="button"  onclick="javascript: history.back(-1);" value="取消" class="btn btn-default">
                    </div>
                </div>
                                   
           </form>
		   </div>
              <div class="col-lg-3">

              </div>
          </div>				
					
	</div>
