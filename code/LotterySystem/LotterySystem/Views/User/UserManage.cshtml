<!-- 用户管理列表 -->
	<div class="panel panel-primary">
		<div class="panel-heading">
         <div class="row">
            <div class="col-lg-1"></div>
	        <div class="col-lg-2 font1" style="text-align:left">
                 用户列表
	        </div>
  
	       <div class="col-lg-6">
               <div class="col-sm-2"></div>
               @using (Html.BeginForm("UserManage", "User", FormMethod.Post))
               {
                <div class="form-horizontal" role="form">
                <div class="col-sm-8"><input type="text" name="userName" class="form-control" placeholder="请输入你要查询的用户ID号" ></div>
                <div class="col-sm-2"><input type="submit" class="btn btn-success" name="submit" value="查询" ></input></div>
                </div>
               }   
           </div>
	       <div class="col-lg-3">
                <div class="pull-right">
                     @Html.ActionLink("新增用户", "UserInfo", "User", new { userName="",oprate="create"}, new { @class = "btn btn-success" })           
 
                </div>
          </div>
  
        </div><!-- /.row -->
						
	  </div><!-- /head-->
					
		<div class="panel-body"  >
             <table class="table table-bordered" >
                <thead>
                    <tr>
                            <th>用户名</th>
 
                            <th>状态</th>
                            <th>权限</th>
                            <th>推荐人</th>
                            <th>操作</th>

                    </tr>
                </thead>
                <tbody>
               
  
						 @for (var i = 0; i < @ViewBag.UserListCount; i++)
						 { 
						      <tr>
                                <td>@ViewBag.UserList[i].UserName</td>
								<td>@ViewBag.UserList[i].Status</td>
           			            <td>@ViewBag.UserList[i].Permission</td>
								<td>@ViewBag.UserList[i].RecommendUserName</td>
                            
                                <td>@Html.ActionLink("修改用户", "UserInfo", "User", new { userName = @ViewBag.UserList[i].UserName,operate = "modify"}, new { @class = "btn btn-primary" })</td>
					                </tr>
						 }  
                                 
    
                   
                </tbody>
             </table>
        </div>
    </div>
