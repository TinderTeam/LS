<div class="jumbotron">
    <div class="row">
        <div class="col-lg-6">
            <div class="lead">广告栏，可设置左右滑动</div>
        </div>
        <!-- 广告栏 -->
        <div class="col-lg-6">
            <div class="panel panel-danger">
                <div class="panel-body">
                    <div class="col-md-7">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <label class="email" for="email">
                                <span>邮箱:</span>
                                <input type="email" name="userID" class="text" size="30" placeholder="请输入用户名" required autofocus />
                            </label>
                            
                            <label class="email" for="password">
                                <span>密码:</span>
                                <input type="password" name="password" class="password" size="30" placeholder="请输入密码" required />
                            </label>
                                                       
                            <label class="pull-right">
                                <input type="submit" value="登录" class="btn btn-lg btn-primary btn-block" />
                            </label>                                            
                        }
                    </div>

                    <div class="col-md-1">
                        <table width="1" border="0" cellspacing="0" cellpadding="0" height="120">
                            <tr>
                                <td width="1" bgcolor="#666666"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-4">
                        <p><font size="3px"><strong>还没有注册过？点击进入>>></strong></font></p>
                        <p class="pull-center"><a class="btn btn-primary" href="#" role="button">注册</a></p>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>



