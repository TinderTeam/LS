@{
    ViewBag.Title = "TitleLogIn";
}
<div class="jumbotron"  style="background-image:url(img/test1.png)">
	
				<div class="row">
					<div class="col-lg-7">
						<h1>广告栏</h1>
						<p>广告标题</p>
					</div>
	   				<div class="col-lg-5">
					 	<div class="panel panel-default">
							<div class="panel-heading">
								登陆游戏
							</div>
							<div class="panel-body">	
					        	<div class="col-md-12">
                                    <section id="loginForm">		
                                    @using (Html.BeginForm("Login","Login",FormMethod.Post)) {
                                        
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)	                              									
									    <div class="form-horizontal">
										    <div class="form-group">
											    <label class="col-sm-3 control-label">邮箱</label>
											    <div class="col-sm-9">
										  		    <input name="UserID" type="email" class="form-control" placeholder="邮箱">
											    </div>
									  	    </div>
									  	    <div class="form-group">
											    <label  class="col-sm-3 control-label">密码</label>
											    <div class="col-sm-9">
												    <input name="Password" type="password" class="form-control" placeholder="密码">
											    </div>
									  	    </div>
										    <div class="form-group">
											    <div class="col-sm-offset-3 col-sm-3" >
												    <input name="submit" type="submit" class="btn btn-primary" value="登陆"/>
											    </div>
											    <div class="col-sm-6">
                                                    @Html.ActionLink("注册","Register","Login",null,new{ @class="btn btn-primary"})		
											    </div>
										    </div>
									    </div>
                                    }
                                        </section>
								</div>
							</div>	      
                       </div>
					</div>
	 			</div>
	        </div><!-- 广告标题 -->