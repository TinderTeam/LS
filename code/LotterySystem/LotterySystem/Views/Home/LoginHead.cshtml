@{
    ViewBag.Title = "TitleLogIn";
}

@{
    ViewBag.Title = "Register";
}


<div class="row-fluid align-center">
    <div class="row">
        <div class="col-lg-4">
        </div>
        <div class="col-lg-4">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    登录游戏
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <section id="loginForm">
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                            {
                                        
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)	                              									
                                <div class="form-horizontal">
                                     <div class="form-group">

                                        <label class="control-label">
                                            @if (ViewBag.Msg == null)
                                            {

                                            }
                                            else
                                            {
                                                @ViewBag.Msg
                                            }
                                        </label>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">用户名</label>
                                        <div class="col-sm-9">
                                            <input name="UserID" type="text" class="form-control" >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">密&nbsp&nbsp&nbsp码</label>
                                        <div class="col-sm-9">
                                            <input name="Password" type="password" class="form-control" >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-3 col-sm-3">
                                            <input name="submit" type="submit" class="btn btn-primary" value="登录" />
                                        </div>
                                        <div class="col-sm-6">
                                            @Html.ActionLink("注册", "Register", "Login", null, new { @class = "btn btn-primary" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-4">
        </div>
    </div>

</div>
<!-- row-fluid -->
